<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.smartlearn.MainActivity"
    android:background="@drawable/background">

    <ImageButton
        android:id="@+id/btn_mtk"
        android:layout_width="341dp"
        android:layout_height="90dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/button_matematika"
        tools:layout_editor_absoluteX="22dp"
        tools:layout_editor_absoluteY="174dp"
        android:background="#00000000"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="251dp"
        android:layout_height="151dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        app:srcCompat="@drawable/mtk"
        tools:layout_editor_absoluteX="67dp"
        tools:layout_editor_absoluteY="23dp" />

    <ImageButton
        android:id="@+id/btn_bindo"
        android:layout_width="341dp"
        android:layout_height="90dp"
        android:layout_alignLeft="@+id/btn_mtk"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/btn_mtk"
        android:layout_marginBottom="26dp"
        android:scaleType="centerCrop"
        android:background="#00000000"
        app:srcCompat="@drawable/button_bindo" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignBottom="@+id/btn_bindo"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="71dp"
        app:srcCompat="@drawable/bhs" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="centerCrop"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="#00000000"
        app:srcCompat="@drawable/button_setting" />

    <ImageButton
        android:id="@+id/btn_exit"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/imageButton4"
        android:layout_alignParentLeft="true"
        android:scaleType="centerCrop"
        android:background="#0000"
        android:layout_alignParentStart="true"
        app:srcCompat="@drawable/button_exit" />
</RelativeLayout>
